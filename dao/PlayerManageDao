package graduate;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class PlayerManage {
	public String addPlayer(String id,String name,String teamName,String height,String weight,String age,String grade,String depart,String position,String number,String role) {
		Connection con = DBhelper.connect();
		PreparedStatement stat1 = null;
		PreparedStatement stat2 = null;
		String sql1 = "select * from gdufs.player where id = '"+id+"';";
		
		try { 
			stat1 = con.prepareStatement(sql1);
			ResultSet rs1 = stat1.executeQuery();
			
			if(!rs1.next()) {
				String sql2 = "insert into gdufs.player values ('"+id+"','"+teamName+"','"+name+"','"+height+"','"+weight+"','"+age+"','"+grade+"','"+depart+"','"+position+"','"+number+"','"+role+"');";
				stat2 = con.prepareStatement(sql2);
				int i = stat2.executeUpdate();
				if(i!=0) {
					return "success";
				}
				else {
					return "error";
				}
			}
			else {
				return "exists";
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return "error";
		} finally {
			
		}
		return "error";
	}
	public boolean deletePlayer(String id) {
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "delete from gdufs.player where id = '"+id+"';";
		
		try {			
			stat = con.prepareStatement(sql);
			int i = stat.executeUpdate();
			if(i!=0) {
				return true;
			}
			else {
				return false;
			}			
		} catch (SQLException e) {
			e.getStackTrace();
			return false;
		} finally {
			
		}
	}
	
	public boolean modifyPlayer(String id,String name,String teamName,String height,String weight,String age,String grade,String depart,String position,String number,String role) {
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "update gdufs.player set name='"+name+"',height='"+height+"',weight='"+weight+"',age='"+age+"',grade='"+grade+"',depart='"+depart+"',position='"+"',number='"+number+"',role='"+role+"' where id='"+id+"';";
		
		try {			
			stat = con.prepareStatement(sql);
			int i = stat.executeUpdate();
			if(i!=0) {
				return true;
			}
			else {
				return false;
			}			
		} catch (SQLException e) {
			e.getStackTrace();
			return false;
		} finally {
			
		}
	}
}
