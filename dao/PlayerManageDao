package graduate;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class PlayerManage {
	public String setPlayer(String id,String name,String teamName,String height,String weight,String age,String grade,String depart,String position,String number,String role) {
		Connection con = DBhelper.connect();
		PreparedStatement stat1 = null;
		PreparedStatement stat2 = null;
		String sql1 = "select * from gdufs.teamplayer where id = '"+id+"' and teamName = '"+teamName+"';";
		
		try { 
			stat1 = con.prepareStatement(sql1);
			ResultSet rs1 = stat1.executeQuery();
			
			if(!rs1.next()) {
				String sql2 = "insert into gdufs.teamplayer values ('"+id+"','"+teamName+"','"+name+"','"+height+"','"+weight+"','"+age+"','"+grade+"','"+depart+"','"+position+"','"+number+"','"+role+"');";
				stat2 = con.prepareStatement(sql2);
				int i = stat2.executeUpdate();
				if(i!=0) {
					return "success";
				}
				else {
					return "error";
				}
			}
			else {
				return "exists";
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return "error";
		} finally {
			
		}
		return "error";
	}
	public String deletePlayer(String id,String teamName) {
		Connection con = DBhelper.connect();
		PreparedStatement stat1 = null;
		PreparedStatement stat2 = null;
		String sql1 = "select * from gdufs.teamplayer where id = '"+id+"' and teamName = '"+teamName+"';";
		String sql2 = "delete from gdufs.teamplayer where id = '"+id+"' and teamName = '"+teamName+"';";
		
		try {			
			stat1 = con.prepareStatement(sql1);
			ResultSet rs1 = stat1.executeQuery();
			if(rs1.next()) {
				stat2 = con.prepareStatement(sql2);
				int i = stat2.executeUpdate();
				if(i!=0) {
					return "success";
				}
				else {
					return "error";
				}
			}
			else {
				return "not exist";
			}
			
		} catch (SQLException e) {
			e.getStackTrace();
			return "error";
		} finally {
			
		}
		return "error";
	}
	public String modifyPlayer(String id,String name,String teamName,String height,String weight,String age,String grade,String depart,String position,String number,String role) {
		Connection con = DBhelper.connect();
		PreparedStatement stat1 = null;
		PreparedStatement stat2 = null;
		String sql1 = "select * from gdufs.teamplayer where id = '"+id+"' and teamName = '"+teamName+"';";
		String sql2 = "update gdufs.teamplayer set name='"+name+"',height='"+height+"',weight='"+weight+"',age='"+age+"',grade='"+grade+"',depart='"+depart+"',position='"+position+"',number='"+number+"',role='"+role+"' where id='"+id+"' and teamName='"+teamName+"';";
		
		try {			
			stat1 = con.prepareStatement(sql1);
			ResultSet rs1 = stat1.executeQuery();
			if(!rs1.next()) {
				return "not exist";
			}
			else {
				stat2 = con.prepareStatement(sql2);
				int i = stat2.executeUpdate();
				if(i!=0) {
					return "success";
				}
				else {
					return "error";
				}
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return "error";
		} finally {
			
		}
		return "error";
	}
}
