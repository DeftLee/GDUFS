package graduate;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

public class PlayerManage {
	public String addPlayer(String id,String name,String teamName,String grade,String depart,String position,int number,String role) {
		Connection con = DBhelper.connect();
		PreparedStatement stat1 = null;
		PreparedStatement stat2 = null;
		String sql1 = "select * from gdufs.player where id = '"+id+"';";
		
		try { 
			stat1 = con.prepareStatement(sql1);
			ResultSet rs1 = stat1.executeQuery();
			
			if(!rs1.next()) {
				String sql2 = "insert into gdufs.player values ('"+id+"','"+teamName+"','"+name+"','"+grade+"','"+depart+"','"+position+"','"+number+"','"+role+"');";
				stat2 = con.prepareStatement(sql2);
				int i = stat2.executeUpdate();
				if(i!=0) {
					return "success";
				}
				else {
					return "error";
				}
			}
			else {
				return "exists";
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return "error";
		} finally {
			if(stat2!=null) {
				//close stat2
			}
		}
		return "error";
	}
	public boolean deletePlayer(String id) {
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "delete from gdufs.player where id = '"+id+"';";
		
		try {			
			stat = con.prepareStatement(sql);
			int i = stat.executeUpdate();
			if(i!=0) {
				return true;
			}
			else {
				return false;
			}			
		} catch (SQLException e) {
			e.getStackTrace();
			return false;
		} finally {
			
		}
	}
	
	public boolean modifyPlayer(String id,String name,String teamName,String grade,String depart,String position,int number,String role) {
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "update gdufs.player set name='"+name+"',grade='"+grade+"',depart='"+depart+"',position='"+"',number='"+number+"',role='"+role+"' where id='"+id+"';";
		
		try {			
			stat = con.prepareStatement(sql);
			int i = stat.executeUpdate();
			if(i!=0) {
				return true;
			}
			else {
				return false;
			}			
		} catch (SQLException e) {
			e.getStackTrace();
			return false;
		} finally {
			
		}
	}
	
	public ArrayList findPlayer(String teamName) {
		ArrayList list = new ArrayList();
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.player where teamName='"+teamName+"' order by number;";
		
		try {
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			while(rs.next()) {
				String id = rs.getString("id");
				String name = rs.getString("name");
				String grade = rs.getString("grade");
				String depart = rs.getString("depart");
				String position = rs.getString("position");
				int number = rs.getInt("number");
				String role = rs.getString("role");
				Player player = new Player(id,name,teamName,grade,depart,position,number,role);
				list.add(player);
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return null;
		} finally {
			
		}
		return list;
	}
}
