package graduate;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

public class FinanceManage {
	public String setRecord(String teamName,String type,String amount,String time,String year,String remark) {
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "insert into gdufs.finance values ('"+teamName+"','"+type+"','"+amount+"','"+time+"','"+year+"','"+remark+"');";
		
		try {			
			stat = con.prepareStatement(sql);
			int i = stat.executeUpdate();
			if(i!=0) {
				return "success";
			}
			else {
				return "error";
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return "error";
		} finally {
			
		}
		return "error";
	}
	
	//查询的时候要用到分页，数据可视化，从数据库中取出来的数据可以用ArrayList来处理。
	
	//按队名查找财务记录
	public ArrayList findRecord(String teamName) {
		ArrayList list = new ArrayList();
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.finance where teamName='"+teamName+"';";
		
		try {			
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			
			while(rs.next()) {
				String type = rs.getString("type");
				String amount = rs.getString("amount");
				String time = rs.getString("time");
				String year = rs.getString("year");
				String remark = rs.getString("remark");
				Finance finance = new Finance(teamName,type,amount,time,year,remark);
				list.add(finance);
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return null;
		} finally {
			
		}
		return list;
	}
	
	//按队名和年份查找财务记录
	public ArrayList findRecord(String teamName,String year) {
		ArrayList list = new ArrayList();
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.finance where teamName='"+teamName+"' and year='"+year+"';";
		
		try {
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			
			while(rs.next()) {
				String type = rs.getString("type");
				String amount = rs.getString("amount");
				String time = rs.getString("time");
				String remark = rs.getString("remark");
				Finance finance = new Finance(teamName,type,amount,time,year,remark);
				list.add(finance);
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return null;
		} finally {
			
		}
	}
}
