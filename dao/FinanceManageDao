package graduate;

import java.sql.Connection;
import java.sql.Date;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

public class FinanceManage {
	public int getSum(String teamName) {
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.teamFee where teamName='"+teamName+"';";
		
		try {
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			if(rs.next()) {
				int sum = rs.getInt("sum");
				return sum;
			}
			else {
				return -1;
			}
		} catch (SQLException e) {
			e.getStackTrace();
			return -1;
		} finally {
			
		}
	}
	
	public boolean setRecord(String teamName,String type,int amount,int sum,Date time,String year,String month,String remark) {
		Connection con = DBhelper.connect();
		PreparedStatement stat1 = null;
		PreparedStatement stat2 = null;
		String sql1 = "update gdufs.teamFee set sum='"+sum+"' where teamName='"+teamName+"';";
		String sql2 = "insert into gdufs.finance values ('"+teamName+"','"+type+"','"+amount+"','"+time+"','"+year+"','"+month+"','"+remark+"');";
		
		try {
			con.setAutoCommit(false);
			
			stat1 = con.prepareStatement(sql1);
			stat1.executeUpdate();
			
			stat2 = con.prepareStatement(sql2);
			stat2.executeUpdate();
			
			con.commit();
			con.setAutoCommit(true);
			
			return true;
		} catch (SQLException e) {
			e.getStackTrace();
			return false;
		} finally {
			
		}
	}
	
	//查询的时候要用到分页，数据可视化，从数据库中取出来的数据可以用ArrayList来处理。
	
	//按队名查找财务记录
	public ArrayList findRecord(String teamName) {
		ArrayList list = new ArrayList();
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.finance where teamName='"+teamName+"' order by time;";
		
		try {			
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			
			while(rs.next()) {
				String type = rs.getString("type");
				int amount = rs.getInt("amount");
				Date time = rs.getDate("time");
				String year = rs.getString("year");
				String month = rs.getString("month");
				String remark = rs.getString("remark");
				Finance finance = new Finance(teamName,type,amount,time,year,month,remark);
				list.add(finance);
			}
			return list;
		} catch (SQLException e) {
			e.getStackTrace();
			return null;
		} finally {
			
		}
	}
	
	//按队名和年份查找财务记录
	public ArrayList findRecord(String teamName,String year) {
		ArrayList list = new ArrayList();
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.finance where teamName='"+teamName+"' and year='"+year+"';";
		
		try {
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			
			while(rs.next()) {
				String type = rs.getString("type");
				int amount = rs.getInt("amount");
				Date time = rs.getDate("time");
				String month = rs.getString("month");
				String remark = rs.getString("remark");
				Finance finance = new Finance(teamName,type,amount,time,year,month,remark);
				list.add(finance);
			}
			return list;
		} catch (SQLException e) {
			e.getStackTrace();
			return null;
		} finally {
			
		}
	}
	
	//按队名，年份和月份查找财务记录
	public ArrayList findRecord(String teamName,String year,String month) {
		ArrayList list = new ArrayList();
		Connection con = DBhelper.connect();
		PreparedStatement stat = null;
		String sql = "select * from gdufs.finance where teamName='"+teamName+"' and year='"+year+"' and month='"+month+"';";
		
		try {
			stat = con.prepareStatement(sql);
			ResultSet rs = stat.executeQuery();
			while(rs.next()) {
				String type = rs.getString("type");
				int amount = rs.getInt("amount");
				Date time = rs.getDate("time");
				String remark = rs.getString("remark");
				Finance finance = new Finance(teamName,type,amount,time,year,month,remark);
				list.add(finance);
			}
			return list;
		} catch (SQLException e) {
			e.getStackTrace();
			return null;
		} finally {
			
		}
	}
}
